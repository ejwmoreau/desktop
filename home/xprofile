#!/bin/bash

# Sourced by LightDM: https://wiki.archlinux.org/title/xprofile

export PATH=$PATH:$HOME/bin
xsetroot -cursor_name left_ptr

# Set key repeat offset & rate to be quicker
# TODO: Need to run this whenever a new keyboard connects I think
xset r rate 300 30

# Start tray programs
blueman-applet &
GDK_SCALE=1 nm-applet &
redshift-gtk -l -33.86482:151.20773 &

# Start lock-related programs
light-locker --lock-after-screensaver 60 --no-lock-on-lid &
screenlock &

# Start other programs
autorandr --change
urxvtd --quiet --opendisplay --fork &
