#!/bin/bash

# TODO: Repurpose this script. It tries to provide a way to easily open any file in vim, without
# needing to open a terminal yourself

# Afterwards, see if `dmenu_theme` can be merged into `dmenu_custom`

findresult=`find ~/ | sed 's/ /\\ /g' | dmenu_theme bright`

if [[ -n "$findresult" ]]
then
    urxvt -e\
        bash -c "vim $findresult -c \"silent ! ~/.config/base16-shell/base16-tomorrow.dark.sh\""
fi
