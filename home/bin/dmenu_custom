#!/usr/bin/env python

import re
import subprocess
import sys

geo = {}

if len(sys.argv) < 2:
    cp = subprocess.run(['xrandr'], stdout=subprocess.PIPE).stdout
    lines = cp.decode('ascii').split('\n')
    regex = re.compile('\d+x\d+')
    for line in lines:
        if 'eDP-1 connected' in line or 'default connected' in line:
            res = regex.search(line).group(0).strip().split('x')
            w = int(res[0])
            h = int(res[1])

            dw = int(w * 0.2)
            dx = int((w - dw) / 2)
            dy = 200

            geo['x'] = str(dx)
            geo['y'] = '200'
            geo['w'] = str(dw)
            geo['h'] = '5'
else:

    x = int(float(sys.argv[1]))
    y = int(float(sys.argv[2]))
    w = int(float(sys.argv[3]))
    h = int(float(sys.argv[4]))

    dw = min(int(w * 0.4), 800)
    dx = int((w - dw) / 2)
    dy = y + 200

    geo['x'] = str(dx)
    geo['y'] = str(dy)
    geo['w'] = str(dw)
    geo['h'] = '5'

css = {}
css['original'] = ['#1B1D1E', '#80D4FF', '#333333', '#FFFFFF']
css['bright'] = ['#373B41', '#DE935F', '#81A2BE', '#000000']
css['test'] = ['#FF0000', '#00FF00', '#0000FF', '#FFFFFF']
theme = 'original'
subprocess.call([
    'dmenu_run',
    '-l', '8',
    '-nb', css[theme][0],
    '-nf', css[theme][1],
    '-sb', css[theme][2],
    '-sf', css[theme][3],
    '-p', "",
    '-f',
    '-i',
    '-fn', "Anonymous Pro:size=11:style=Book",
    '-h', geo['h'],
    '-w', geo['w'],
    '-x', geo['x'],
    '-y', geo['y']
])
