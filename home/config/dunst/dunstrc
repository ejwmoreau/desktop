# Config for Dunst notifications

[global]
    # Notifications should follow the monitor that the mouse is on
    follow = mouse

    ##### Progress bar #####

    # Triggered via `dunstify -h int:value:12`
    # Currently used for volume & brightness notifications
    progress_bar = true

    # Height of the progress bar, including the border frame
    progress_bar_height = 5

    # Border frame of the progress bar
    progress_bar_frame_width = 0

    # TODO: Continue through /etc/dunst/dunstrc from Line 64

    ##### Colours #####

    frame_color = "#4d4d4c"
    separator_color = frame

    ##### Text #####

    font = Roboto 10

[base16_low]
    msg_urgency = low
    background = "#e0e0e0"
    foreground = "#8e908c"

[base16_normal]
    msg_urgency = normal
    background = "#d6d6d6"
    foreground = "#4d4d4c"

[base16_critical]
    msg_urgency = critical
    background = "#c82829"
    foreground = "#282a2e"

