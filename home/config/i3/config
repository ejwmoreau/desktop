# ----- General / Setup ----- #

# Windows / Super key
set $mod Mod4

# Font used for window titles & status bar
font pango:Roboto 8

# Wallpaper
exec --no-startup-id feh --bg-scale ~/.config/i3/wallpaper.png

# TODO: Maybe configure nagbar to have timestamps? Or jump to the end of the log file?

# ----- Program Behaviour ----- #

# Zoom window properties:
# "Home" window:             [class="zoom" id=... instance="zoom" title="Zoom - Licensed Account"]
# "Meeting" window:          [class="zoom" id=... instance="zoom" title="Zoom Meeting"]
# "Starting zoom" window:    [class="zoom" id=... instance="zoom" title="Zoom Cloud Meetings"]
# "Loading meeting" window:  [class="zoom" id=... instance="zoom" title="Zoom"]
# "Stop recording?" window:  [class="zoom" id=... instance="zoom" title="Zoom"]
# "You're the host" window:  [class="zoom" id=... instance="zoom" title="zoom"]
# "Recording coming" window: [class="zoom" id=... instance="zoom" title="zoom"]

# Stop Zoom from taking focus, and move to Workspace 8
no_focus [class="zoom"]
for_window [class="zoom"] move to workspace 8
# Make "notification"-like windows float, while keeping other windows tiled
for_window [title="^(zoom|Zoom)$"] floating enable
for_window [title="^(Zoom Meeting|Zoom - Licensed Account)$"] floating disable
# Hide the "Home" and "Loading meeting" Zoom windows, because they get in the way
for_window [title="^(Zoom - Licensed Account|Zoom Cloud Meetings)$"] move scratchpad

for_window [class="Arandr"] floating enable
for_window [class="Pavucontrol"] floating enable

# ----- Program Key Bindings ----- #

# Start a terminal with latest ~/.Xresources settings
bindsym $mod+Return exec xrdb ~/.Xresources && urxvt

# Start program launcher
bindsym $mod+p exec --no-startup-id dmenu_custom

