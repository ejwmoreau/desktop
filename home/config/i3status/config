# i3status configuration file.
# see "man i3status" for documentation.
# Docs: https://i3wm.org/docs/i3status.html

general {
  output_format = "i3bar"
  interval = 5

  # Tweak the colors to be easier on the eyes
  # "Default" color is in the i3 config (bar section)
  colors = true
  color_good = "#BAFFC9"
  color_degraded = "#FFDFBA"
  color_bad = "#FFB3BA"
}

order += "cpu_usage"
order += "memory"
order += "disk /"
order += "battery all"
order += "time"
order += "tztime local"

cpu_usage {
  format = "%usage"
}

memory {
  format = "%percentage_used"
  threshold_degraded = "2G"
  threshold_critical = "1G"
}

disk "/" {
  format = "%avail"
}

battery all {
  format = "%status %percentage"

  # Don't show decimals for battery percentage
  integer_battery_capacity = true

  # Don't use the "design capacity", but instead the "last full capacity"
  last_full_capacity = true

  # Display in red when below 20% battery
  low_threshold = 20
  threshold_type = percentage

  # Display symbols for charging vs on battery
  status_chr = ‚ÜóÔ∏è
  status_bat = ‚ÜòÔ∏è
  status_unk = ?
  status_full = üü¢
}

time {
  format = "%a %d %b"
}

tztime local {
  format = "%H:%M"
}
